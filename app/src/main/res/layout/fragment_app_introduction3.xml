<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appintroduction.fragments.AppIntroduction1Fragment"
    android:orientation="vertical"
    android:background="@color/purple_500"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/white">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="@color/purple_500" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We made payment\nis easy"
            android:textSize="31sp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white" />


        <ImageView
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/app_introduction3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment support credit card and\npaypal features"
            android:textColor="@color/white"
            android:textSize="19sp"

            android:alpha="0.8" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardGetStartedAppIntroduction3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="23sp"
        app:cardBackgroundColor="@color/white"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:padding="16dp"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>
